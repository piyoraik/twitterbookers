<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>Editing User</h1>
            <%= image_tag @user.image %>
            <%= form_for(@user) do |f| %>
                <div class="row">
                    <label for="name">Name</label>
                    <%= f.text_field :name, for:"name", class:"col-xs-12" %>
                </div>
                <div class="row">
                    <label for="prof">Profile</label>
                    <%= f.text_area :description, for:"prof", class:"col-xs-12" %>
                </div>
                <div class="actions row">
                    <%= f.submit "Update Profile", class:"btn btn-primary col-xs-12" %>
                </div>
            <% end %>
        </div>
    </div>
</div>