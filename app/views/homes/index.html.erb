<div class="container">
    <div class="row">
        <div class="top-message col-md-offset-3 col-md-6">
            <% if flash[:message] %>
                <%= flash[:message] %>
            <% end %>
            <h1>Welcome to Bookers</h1>
            <% if logged_in? %>
                ログインしてる<br>
                ログイン名:<%= current_user.name %><br>
                ID:<%= current_user.nickname %><br>
                <%= image_tag current_user.image %>
            <% else %>
                ログインしてない
            <% end %>
        </div>
    </div>
</div>